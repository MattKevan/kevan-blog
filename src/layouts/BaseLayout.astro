---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource/geist-sans/400.css';
import '@fontsource/geist-sans/700.css';
// Supports weights 100-900
import '@fontsource/geist-mono';
import '../styles/global.css';
import SideHeader from '../components/SideHeader.astro';
import Head from '../components/Head.astro';
const { frontmatter, pageTitle, description, image, imagefile } = Astro.props;
---
<html lang="en">
  <Head frontmatter={frontmatter} pageTitle={pageTitle} />

  <body class="dark:bg-gray-950 dark:text-white">
    <Header />

      <div class="prose text-black dark:text-white dark:prose-invert mx-auto p-4 max-w-3xl">
        {pageTitle && (
        <h1>{pageTitle}</h1>
        )}
        <slot />
      </div>
    
    <Footer />

    <script>
// Import the screensaver module
import { initScreensaver } from '../scripts/screensaver.js';
  
  // Initialize when the DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    const screensaver = initScreensaver({
      timeout: 2 * 60 * 1000, // 2 minutes (adjust as needed)
    });
    
    // Example: You can also control it programmatically
    // document.getElementById('start-button').addEventListener('click', screensaver.start);
    // document.getElementById('stop-button').addEventListener('click', screensaver.stop);
  });
      </script>
      
  </body>
</html>