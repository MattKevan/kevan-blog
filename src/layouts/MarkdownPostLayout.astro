---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <p class="text-2xl !mb-0">{frontmatter.description}</p>
    <p class="text-sm text-gray-600 font-mono">{frontmatter.author} â€“ {frontmatter.pubDate.toLocaleDateString()}</p>

    {frontmatter.image.url && (
        <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />
    )}


  

  <slot />
  <div class="tags font-mono font-[300] text-sm flex gap-3 ">

    {frontmatter.tags.map((tag: string) => (
      <p class="!mt-0"><a class="text-gray-600" href={`/tags/${tag}`}>#{tag}</a></p>
    ))}
  </div>
</BaseLayout>
